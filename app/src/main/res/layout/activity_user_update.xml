<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.chihuobao.activity.UserUpdateActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:background="@drawable/setting_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="头像" />

            <TextView
                android:id="@+id/photo"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="电话" />

            <TextView
                android:id="@+id/phone"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />

        <LinearLayout
            android:id="@+id/layout_minconsume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="最低消费" />

            <TextView
                android:id="@+id/minconsume"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_sendexpense"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="送餐费" />

            <TextView
                android:id="@+id/sendexpense"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="email" />

            <TextView
                android:id="@+id/email"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="店铺名" />

            <TextView
                android:id="@+id/name"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_businessstarttime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="营业开始时间" />

            <TextView
                android:id="@+id/businessstarttime"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_businessendtime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="营业结束时间" />

            <TextView
                android:id="@+id/businessendtime"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/app_bg" />
        <LinearLayout
            android:id="@+id/layout_serving"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="是否营业" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Switch
                    android:id="@+id/serving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
