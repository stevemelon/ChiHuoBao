<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ff427fed</item>
        <item name="colorAccent">#ff427fed</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Widget.EditText.Ele" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">@dimen/edit_text_height</item>
    </style>
    <style name="setting_text_style">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>
    <style name="title_bar_style">
        <item name="android:background">@color/napos_dark_sky_blue</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="small_divider">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/small_divider</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/dark_theme_text</item>
    </style>

</resources>
